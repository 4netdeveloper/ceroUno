<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aparatos.LucesLed">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="@string/luz_led"
            android:textAlignment="center"
            android:textSize="45dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/imageLed"
            android:layout_width="wrap_content"
            android:layout_height="365dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_round"
            android:tag="GP5AR1" />

        <!-- view - se elige el color de la imagen-->
        <View
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="50dp"></View>


        <!-- TextView - se setea los valores HEX y RGB -->
        <TextView
            android:id="@+id/resultTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEX: \nRGB: "
            android:textColor="#000"
            android:textSize="18dp">

        </TextView>

    </LinearLayout>

</FrameLayout>